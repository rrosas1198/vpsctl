{
    "exclude": [".git"],
    "unstable": ["ffi"],
    "workspace": [
        "./packages/*"
    ],
    "compilerOptions": {
        "strict": true,
        "noImplicitOverride": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "useUnknownInCatchVariables": true
    },
    "fmt": {
        "indentWidth": 4,
        "trailingCommas": "never"
    },
    "lint": {
        "rules": {
            "tags": ["recommended", "jsr"]
        }
    }
}
